<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>

		<!-- JDBC連線池 (預設會使用Hibernate內建的連線池)(不建議用在實際的專案) -->
		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/artion?serverTimezone=Asia/Taipei</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">1018</property>
        
		<!--SQL方言,以下使用MySQL8 -->
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>

		<!--是否要顯示實際操作資料庫時的SQL -->
		<property name="hibernate.show_sql">true</property>

        <!-- Disable the second-level cache -->
        <property name="hibernate.cache.provider_class">org.hibernate.cache.NoCacheProvider</property>

		<!--交易管理類型, 以下使用JDBC Transaction -->
		<property name="hibernate.transaction.coordinator_class">jdbc</property>
        
        <!-- Enable Hibernate's automatic session context management -->
		<property name="hibernate.current_session_context_class">thread</property>

		<mapping class="com.tha103.artion.member.model.MemberVO"/>
  		<mapping class="com.tha103.artion.activityComment.model.ActivityCommentVO"/>
  		<mapping class="com.tha103.artion.memberCollection.model.MemberCollectionVO"/>
  		<mapping class="com.tha103.artion.memberLevel.model.MemberLevelVO"/>
  		<mapping class="com.tha103.artion.myPromoCode.model.MyPromoCodeVO"/>
		<mapping class="com.tha103.artion.area.model.AreaVO"/>
  		<mapping class="com.tha103.artion.city.model.CityVO"/>
  		<mapping class="com.tha103.artion.memberNotify.model.MemberNotifyVO"/>
  		<mapping class="com.tha103.artion.merchOrder.model.MerchOrderVO"/>
  		<mapping class="com.tha103.artion.merchOrderDetail.model.MerchOrderDetailVO"/>
  		<mapping class="com.tha103.artion.ticketOrder.model.TicketOrderVO"/>
  		<mapping class="com.tha103.artion.ticketOrderDetail.model.TicketOrderDetailVO"/>
  		<mapping class="com.tha103.artion.activityLike.model.ActivityLikeVO"/>
  		<mapping class="com.tha103.artion.activityCommentLike.model.ActivityCommentLikeVO"/>
  		<mapping class="com.tha103.artion.sellerNotification.model.SellerNotificationVO"/>
  		<mapping class="com.tha103.artion.seller.model.SellerVO"/>
  		<mapping class="com.tha103.artion.activity.model.ActivityVO"/>
  		<mapping class="com.tha103.artion.administrator.model.AdministratorVO"/>
  		<mapping class="com.tha103.artion.commentReport.model.CommentReportVO"/>
  		<mapping class="com.tha103.artion.merch.model.MerchVO"/>
  		<mapping class="com.tha103.artion.promoCode.model.PromoCodeVO"/>

	</session-factory>
	
</hibernate-configuration>
